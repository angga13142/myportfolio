# Production URL (Your custom domain)
NEXT_PUBLIC_URL="https://yourdomain.com"

# Upstash Redis (for page view tracking) - Optional
# Get from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL="your_upstash_redis_url_here"
UPSTASH_REDIS_REST_TOKEN="your_upstash_redis_token_here"

# Email service (for contact form and newsletter) - Optional
# Get from: https://resend.com/api-keys
RESEND_API_KEY="your_resend_api_key_here"

# Google Analytics 4 Measurement ID - Optional (for comprehensive analytics tracking)
# Get from: https://analytics.google.com/ (Format: G-XXXXXXXXXX)
# Tracks: page views, PDF downloads, language switches, video plays, etc.
NEXT_PUBLIC_GA_MEASUREMENT_ID="your_ga4_measurement_id"

# Umami Analytics (Privacy-focused) - Optional
NEXT_PUBLIC_UMAMI_WEBSITE_ID="your-umami-website-id"
NEXT_PUBLIC_UMAMI_URL="https://analytics.umami.is"

# Vercel Analytics & Speed Insights
# These are automatically enabled when deployed to Vercel
# No additional configuration needed!

# Admin Panel Password (IMPORTANT: Change this in production!)
# Used to protect /admin dashboard for content management
ADMIN_PASSWORD="admin123"

